<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:scrollbars="vertical">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Schimba imaginea de profil:"
                android:layout_marginBottom="10dp"
                android:textColor="#FFF"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/edit_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFF"
                android:minHeight="50dp"
                android:src="@drawable/photo_black_24dp" />

            <Button
                android:layout_marginTop="1dp"
                android:id="@+id/save_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFF"
                android:layout_weight="3"
                android:textColor="#000"
                android:hint="SAVE"
                android:textStyle="bold" />
        </LinearLayout>

        <EditText
            android:id="@+id/edit_textSUS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#FFF"
            android:focusedByDefault="false"
            android:hint="Editeaza textul (info/parte sus)" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/settings_getTextSus"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="3"
                android:background="#FFF"
                android:hint="Afiseaza"
                android:textStyle="bold" />

            <Button
                android:id="@+id/settings_setTextSus"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="3"
                android:background="#FFF"
                android:hint="Salveaza"
                android:textStyle="bold" />
        </LinearLayout>

        <EditText
            android:id="@+id/edit_textJOS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#FFF"
            android:focusedByDefault="false"
            android:hint="Editeaza textul (info/parte jos)" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/settings_getTextJOS"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="3"
                android:background="#FFF"
                android:hint="Afiseaza"
                android:textStyle="bold" />

            <Button
                android:id="@+id/settings_setTextJOS"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="3"
                android:background="#FFF"
                android:hint="Salveaza"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="#FFF"
            android:text="Schimba rata de refresh(minim metri penru refresh):"
            android:textColor="#000000"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText

                android:id="@+id/edit_ms"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="#FFF"
                android:focusedByDefault="false"
                android:hint="minTime"
                android:inputType="phone"
                android:padding="10dp" />

            <Button
                android:id="@+id/button_ms"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="3"
                android:background="#FFF"
                android:hint="SAVE"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="#FFF"
            android:text="Schimba rata de refresh(minim secunde penru refresh):"
            android:textColor="#000000"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edit_metri"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="#FFF"
                android:focusedByDefault="false"
                android:hint="minDistance"
                android:inputType="phone"
                android:padding="10dp" />

            <Button
                android:id="@+id/button_metri"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="3"
                android:background="#FFF"
                android:hint="SAVE"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>